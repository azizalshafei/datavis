{
    "$schema": "https://vega.github.io/schema/vega-lite/v3.json",
    "width": 1000,
    "height": 500,
    "data": {
      "url": "https://raw.githubusercontent.com/azizalshafei/datavis/main/main/main/countries.geojson",
      "format": {"property": "features"}
    },
    "transform": [
      {
        "filter": {
          "field": "properties.ISO_A3",
          "oneOf": [
            "BHR",
            "KWT",
            "OMN",
            "QAT",
            "SAU",
            "ARE"           
          ]
        }
      }
    ],
    "projection": {"type": "mercator"},
    
    "layer": [
  {
    "mark": {
      "type": "geoshape",
      "fill": "#eee",
      "stroke": "#757575",
      "strokeWidth": 0.5
    }
  },
  {
    "mark": "text",
    "encoding": {
      "text": {"field": "properties.ISO_A3", "type": "nominal"},
      "longitude": {"field": "properties.long", "type": "quantitative"},
      "latitude": {"field": "properties.lat", "type": "quantitative"},
      "size": {"value": 5},
      "opacity": {"value": 0.6}
    }
  }
]
  }
